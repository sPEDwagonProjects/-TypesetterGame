<Window x:Class="GenWords.InputWordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenWords"
        mc:Ignorable="d"
        Title="InputWordDialog" FontSize="18" Height="200" Width="300">
    
    <Grid Margin="10">
        
        <StackPanel >
            <TextBlock HorizontalAlignment="Center" Text="Введите слово:"/>
            <TextBox Margin="10"   x:Name="WordBox" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Margin="10" Padding="10,2" Name="GoButton" Content="Применить" Click="GoButton_Click"/>
                <Button Margin="10" Padding="10,2" Name="ExitButton" Content="Выход" Click="ExitButton_Click"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
    
</Window>
